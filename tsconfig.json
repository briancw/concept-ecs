{
    "include": [".", ".eslintrc.cjs"],
    "exclude": ["archive", "perf"],
    "compilerOptions": {
        "noEmit": true,
        "target": "ESNext",
        "lib": ["ESNext"],
        "types": [
            "node",
            "@types/jest"
        ],
        "module": "esnext",
        "moduleResolution": "node", // Needed for ommiting file extensions
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
    }
}